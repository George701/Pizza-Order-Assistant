<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainLayout"
    android:padding="@dimen/lyotP"
    android:background="@color/AntiqueWhite"
    tools:context=".Cart">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/placeholder">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnPizza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn"
            android:fontFamily="@font/greatvibes_regular"
            android:padding="@dimen/lyotP"
            android:text="@string/btnPizza"
            android:textColor="@color/AntiqueWhite"
            android:textSize="@dimen/btnSize" />

        <Button
            android:id="@+id/btnOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn"
            android:fontFamily="@font/greatvibes_regular"
            android:padding="@dimen/lyotP"
            android:text="@string/btnOrder"
            android:textColor="@color/AntiqueWhite"
            android:textSize="@dimen/btnSize" />

    </RelativeLayout>

</LinearLayout>